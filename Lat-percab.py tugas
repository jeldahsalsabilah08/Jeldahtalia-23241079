print("silahkan masukkan operasi yang diinginkan")

print("2 - operasi penjumlahan")

print("3 - operasi pengurangan")

pilihan = int(input("masukkan pilihan anda :"))



if pilihan == 2:

    print("ini operasi penjumlahan")

    bilangan2 =  int(input("masukkan bilangan kedua :"))

    bilangan3 = int(input("masukkan bilangan ketiga :"))

    hasil = bilangan2 + bilangan3

    print("hasil adalah : ",hasil)

elif pilihan == 3:

    print("ini operasi pengurangan")

    bilangan2 =  int(input("masukkan bilangan kedua :"))

    bilangan3 = int(input("masukkan bilangan ketiga :"))

    hasil = bilangan2 - bilangan3

    print("hasil adalah : ",hasil)
